--><project name="tcombackoffice_buildcallbacks">
    	
    <property name="tcombackofficeWebFragmentSrc" value="${ext.tcombackoffice.path}/resources/web-fragment.xml"/>
    	
    <property name="tcombackofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_tcombackoffice.jar"/>
    	
    <macrodef name="tcombackoffice_clean_classpath_file">
        		
        <sequential>
            			
            <copy failonerror="true" file="${ext.tcombackoffice.path}/.classpath" overwrite="true" tofile="${ext.tcombackoffice.path}/.classpath.edit">
                				
                <filterchain>
                    					
                    <linecontainsregexp negate="true">
                        						
                        <regexp pattern="^(\t\t\t\t|)$"/>
                          
                        <!-- added by script -->
                        					
                    </linecontainsregexp>
                    				
                </filterchain>
                			
            </copy>
            			
            <move failonerror="true" file="${ext.tcombackoffice.path}/.classpath.edit" overwrite="true" tofile="${ext.tcombackoffice.path}/.classpath"/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tcombackoffice_after_clean">
        		
        <sequential>
            			
            <echo level="info" message="Generating .classpath file for tcombackoffice"/>
            			
            <create_extension_classpath_file extname="tcombackoffice"/>
            			
            <tcombackoffice_clean_classpath_file/>
            			
            <tcombackoffice_remove_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tcombackoffice_after_build">
        		
        <sequential>
            			
            <tcombackoffice_remove_web_fragment/>
            			
            <tcombackoffice_create_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tcombackoffice_remove_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${tcombackofficeWebFragmentDestJar}"/>
                				
                <then>
                    					
                    <delete file="${tcombackofficeWebFragmentDestJar}"/>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tcombackoffice_create_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${tcombackofficeWebFragmentSrc}"/>
                				
                <then>
                    					
                    <sequential>
                        						
                        <jar destfile="${tcombackofficeWebFragmentDestJar}">
                            							
                            <metainf file="${tcombackofficeWebFragmentSrc}"/>
                            						
                        </jar>
                        					
                    </sequential>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <patternset id="tcombackoffice.localization.pattern">
        		
        <!-- core and hmc  -->
        		
        <include name="**/*locales*_en.properties"/>
        		
        <exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
        		
        <exclude name="**/unittest/**/*"/>
        		
        <!-- cockpit (ng) -->
        		
        <include name="**/i3-label_en.properties"/>
        		
        <include name="**/labels_en.properties"/>
        		
        <!-- messages -->
        		
        <include name="**/*messages_en.properties"/>
        		
        <include name="**/*messages.properties"/>
        		
        <!-- frontend properties files in WEB-INF/messages folder -->
        		
        <include name="**/WEB-INF/messages/*_en.properties"/>
        		
        <!-- csv and impex -->
        		
        <include name="**/*_en.csv"/>
        		
        <include name="**/*_en.impex"/>
        		
        <include name="**/lang-en.properties"/>
        		
        <!-- email localizations from yacceleratorcore -->
        		
        <include name="resources/**/messages/*_en.properties"/>
        		
        <!-- include validation messages -->
        		
        <include name="resources/**/ValidationMessages.properties"/>
        	
    </patternset>
    	
    <macrodef name="tcombackoffice_before_build">
        		
        <sequential>
            			
            <register_sass_extension extensionname="tcombackoffice"/>
            			
            <register_sass_extension destination="" extensionname="tcombackoffice" resources="resources"/>
            		
        </sequential>
        	
    </macrodef>
    
</project>
